<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--首页-->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error/error.jsp</location>
    </error-page>

    <!--Encoding Filter-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.wang.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <!--Form Filter-->
    <filter>
        <filter-name>FormFilter</filter-name>
        <filter-class>com.wang.filter.FormFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FormFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <!--Directory 请求转发器 Servlet-->
    <servlet>
        <servlet-name>Web</servlet-name>
        <servlet-class>com.wang.controller.ActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Web</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <!--Directory action转发器 Servlet-->
    <servlet>
        <servlet-name>Action</servlet-name>
        <servlet-class>com.wang.action.DispatcherAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Action</servlet-name>
        <url-pattern>*.action</url-pattern>
    </servlet-mapping>

</web-app>